<Window x:Class="mozijegyfoglalo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mozijegyfoglalo"
        mc:Ignorable="d"
        Title="Mozi jegy foglalás" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Label Content="Mozi Jegyfoglaló Rendszer" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
        <DataGrid x:Name="datagrid" Grid.Row="1"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <Button Content="Adatok betöltése" Width="120" Click="adatokbetoltese"/>
            <Button Content="Foglalás" Width="120" Click="foglalas"/>
            <Button Content="Csak ahol van hely" Width="120" Click="csakaholvanhely"/>
            <Button Content="Legnépszerűbb" Width="120" Click="legnepszerubb"/>
            <Button Content="Átlagos szabad helyek" Width="120" Click="atlagosszabadhely"/>
            <Button Content="Csak 3D-s filmek" Width="120" Click="csak3d"/>
        </StackPanel>
        <GroupBox Grid.Row="4" Header="Új előadás hozzáadása" Margin="0,5,0,0">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <TextBlock Grid.Row="0" Grid.Column="0" Text="Film címe:" Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="txtFilmCim" Grid.Row="0" Grid.Column="1" Margin="0,0,15,3"/>

                <TextBlock Grid.Row="0" Grid.Column="3" Text="Időpont:" Margin="0,0,5,0"
                           VerticalAlignment="Center"/>

                <TextBox x:Name="txtIdopont" Grid.Row="0" Grid.Column="4" Margin="0,0,0,3"
                         ToolTip="Formátum pl.: 2025.12.15 10:30"/>


                <TextBlock Grid.Row="1" Grid.Column="0" Text="Terem:" Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="txtTerem" Grid.Row="1" Grid.Column="1" Margin="0,0,15,3"/>

                <TextBlock Grid.Row="1" Grid.Column="3" Text="Szabad helyek:" Margin="0,0,5,0"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="txtSzabadHely" Grid.Row="1" Grid.Column="4" Margin="0,0,0,3"/>

                <CheckBox x:Name="chk3D" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="3D-s vetítés" Margin="0,5,0,0"/>

                <StackPanel Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                    <Button Content="Hozzáadás" Width="90" Margin="0,0,8,0" Click="hozzaadas"/>
                    <Button Content="Keresés" Width="90" Click="kereses"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
