<Window x:Class="mozijegyfoglalo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mozijegyfoglalo"
        mc:Ignorable="d"
        Title="Mozi jegy foglalás" Height="450" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Label Content="Mozi Jegyfoglaló Rendszer" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
        <DataGrid x:Name="datagrid" Grid.Row="1"/>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="5">
            <Button Content="Adatok betöltése" Width="120" Click="adatokbetoltese"/>
            <Button Content="Foglalás" Width="120" Click="foglalas"/>
            <Button Content="Csak ahol van hely" Width="120" Click="csakaholvanhely"/>
        </StackPanel>
    </Grid>
</Window>
